{
  "name": "cozy-house",
  "description": "Who said Analytics is boring? Have you tried CozyHouse?",
  "version": "1.0.0",
  "author": "Babichev Maxim",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bavix/cozy-house.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/bin/www.js",
    "build": "rimraf dist && cross-env NODE_ENV=production babel src -d dist -s",
    "prod": "npm run build && npm run start",
    "dev": "nodemon src/bin/www.js",
    "lint": "eslint --fix src && prettier --write \"src/**/*.js\""
  },
  "dependencies": {
    "@apla/clickhouse": "^1.5.5",
    "@koa/cors": "^2.2.3",
    "amqplib": "^0.5.2",
    "glob": "^7.1.3",
    "ip": "^1.1.5",
    "isbot": "^2.2.0",
    "knex": "^0.15.2",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-json": "^2.0.2",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "memcached": "^2.2.2",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.23",
    "objection": "^1.6.3",
    "pg": "^7.9.0",
    "platform": "^1.3.5",
    "referer-parser": "^0.0.3",
    "uuid": "^3.3.2",
    "validate": "^4.5.1",
    "winston": "^3.2.1",
    "yenv": "^2.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "babel-eslint": "^10.0.1",
    "babel-plugin-source-map-support": "^2.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^3.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "prettier",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest/globals": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-syntax-object-rest-spread"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          "source-map-support"
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
